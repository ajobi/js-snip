{
  "name": "js-snip",
  "version": "1.0.0-alpha.2",
  "description": "Universal JavaScript library for clamping HTML text elements.",
  "author": "Andrej Bilec <andrej.bilec@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint './**/*.{js,ts}'",
    "lint:fix": "eslint './**/*.{js,ts}' --fix",
    "test:open": "yarn instrument && cypress open",
    "test:run": "yarn instrument && cypress run",
    "test": "yarn test:run && yarn coverage",
    "instrument": "nyc instrument src instrumented",
    "coverage": "nyc report --reporter=text --reporter=text-summary",
    "coveralls": "npx nyc report --reporter=text-lcov | coveralls",
    "prepare": "yarn build"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.5",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "coveralls": "^3.1.0",
    "cypress": "^7.2.0",
    "esbuild": "^0.11.16",
    "eslint": "^7.25.0",
    "rollup": "^2.46.0",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-esbuild": "^4.2.3",
    "typescript": "^4.2.4"
  },
  "homepage": "https://github.com/ajobi/js-snip",
  "repository": "https://github.com/ajobi/js-snip.git",
  "keywords": [
    "clamp",
    "ellipsis",
    "snip",
    "snip-text",
    "cut-text",
    "clamp-text",
    "truncate-text",
    "multiline-text"
  ]
}
